{% extends 'base.html.twig' %}
{% block title %}Listado de Accesos al sistema{% endblock %}
{% block subtitle %}<a href="{{ path('admin_accesos_new') }}"> <button class="btn btn-info btn-flat" type="button">Agregar <span class="glyphicon glyphicon-plus-sign"></span></button></a>{% endblock %}
{% block body %}
<div class="col-xs-12">
 <div class="box">
  <div class="box-body">
   <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
       <th>Nombre de item en menu</th>
       <th>Ruta en router</th>
       <th>Visible</th>
       <th>Operaciones</th>
      </tr>
     </thead>
     <tbody>
        {% for a in ctlAccesos %}
      <tr>
       <td><a href="{{ path('admin_accesos_show', { 'id': a.id }) }}">{{ a.nombreAcceso }}</a></td>
       <td>{{ a.pathAcceso }}</td>
       <td>{{ a.visibleAcceso }}</td>
       <td>
        <a href="{{ path('admin_accesos_edit', { 'id': a.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
        <a href="{{ path('admin_accesos_show', { 'id': a.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
       </td>
      </tr>
     {% endfor %}
     </tbody>
     <tfoot>
       <tr>
       <th>Nombre de item en menu</th>
       <th>Ruta en router</th>
       <th>Visible</th>
       <th>Operaciones</th>
       </tr>
     </tfoot>
    </table>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<script src="{{ asset('assets/') }}core/bower_components/DataTables/media/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/DataTables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/DataTables/extensions/Buttons/js/buttons.html5.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/pdfmake.min.js"></script>
<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/vfs_fonts.js"></script>
<script>
$(document).ready(function() {
    $('#tabla').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf'
        ],
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true
    } );
} );
</script>

{% endblock %}
{% block head_css %}
  <link rel="stylesheet" href="{{ asset('assets/') }}core/bower_components/DataTables/media/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="{{ asset('assets/') }}core/bower_components/DataTables/extensions/Buttons/css/buttons.dataTables.min.css">
{% endblock %}
