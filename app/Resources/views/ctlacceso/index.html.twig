{% extends 'base.html.twig' %}
{% block title %}Listado de Accesos al sistema{% endblock %}
{% block subtitle %}<a href="{{ path('admin_accesos_new') }}"> Agregar <span class="glyphicon glyphicon-plus-sign"></span></a>{% endblock %}
{% block body %}
<div class="col-xs-12">
 <div class="box">
  <div class="box-body">
   <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
       <th>Nombre de item en menu</th>
       <th>Ruta en router</th>
       <th>Visible</th>
       <th>Operaciones</th>
      </tr>
     </thead>
     <tbody>
        {% for a in ctlAccesos %}
      <tr>
       <td><a href="{{ path('admin_accesos_show', { 'id': a.id }) }}">{{ a.nombreAcceso }}</a></td>
       <td>{{ a.pathAcceso }}</td>
       <td>{{ a.visibleAcceso }}</td>
       <td>
        <a href="{{ path('admin_accesos_edit', { 'id': a.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
        <a href="{{ path('admin_accesos_show', { 'id': a.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
       </td>
      </tr>
     {% endfor %}
     </tbody>
     <tfoot>
       <tr>
       <th>Nombre de item en menu</th>
       <th>Ruta en router</th>
       <th>Visible</th>
       <th>Operaciones</th>
       </tr>
     </tfoot>
    </table>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
{% endblock %}
