{% extends 'base.html.twig' %}
{% block title %}Listado de Suministros{% endblock %}
{% block subtitle %}{% endblock %}
{% block body %}
<div class="col-xs-12">
 <div class="box">
  <div class="box-body">
   <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
       <th>Nombre de suministro</th>
       <th>Registro</th>
       <th>Administado por</th>
       <th>Operaciones</th>
      </tr>
     </thead>
     <tbody>
        {% for ctlSuministro in ctlSuministros %}
      <tr>
       <td><a href="{{ path('configuracion_suministros_show', { 'id': ctlSuministro.id }) }}">{{ ctlSuministro.nombreSuministro }}</a></td>
       <td>{% if ctlSuministro.registroSchema %}{{ ctlSuministro.registroSchema|date('Y-m-d H:i:s') }}{% endif %}</td>
       <td>{{ ctlSuministro.roleRegistra }}</td>
       <td>
        <a href="{{ path('configuracion_suministros_edit', { 'id': ctlSuministro.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
        <a href="{{ path('configuracion_suministros_show', { 'id': ctlSuministro.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
       </td>
      </tr>
     {% endfor %}
     </tbody>
     <tfoot>
       <tr>
       <th>Nombre de suministro</th>
       <th>Registro</th>
       <th>Administado por</th>
       <th>Operaciones</th>
       </tr>
     </tfoot>
    </table>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
{% endblock %}
