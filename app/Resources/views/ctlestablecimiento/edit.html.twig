{% extends 'base.html.twig' %}
{% block title %}Editar{% endblock %}
{% block body %}
<div class="row">
 <div class="col-xs-12">
  <div class="box">
   <div class="box-header with-border">
    <h4>Datos</h4>
    <div class="box-tools pull-right">
     <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Ocultar">
     <i class="fa fa-minus"></i></button>
     <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Salir">
     <i class="fa fa-times"></i></button>
    </div>
   </div>
   <div class="box-body">
    {{ form_start(edit_form) }}
	  <div class="form-group">
       <label>Tipo de Establecimiento : </label>
       {{ form_widget(edit_form.idTipoEstablecimiento, {'attr': {'class': 'form-control', 'style' : 'width: 90%'}}) }}{{ form_errors(edit_form.idTipoEstablecimiento) }}
      </div>
	  <div class="form-group">
       <label>Nombre : </label>
       {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control', 'style' : 'width: 90%'}}) }}{{ form_errors(edit_form.nombre) }}
      </div>
	  <div class="form-group">
       <label>Productos : </label>
       {{ form_widget(edit_form.ctlInsumoid, {'attr': {'class': 'form-control', 'style' : 'width: 90%'}}) }}{{ form_errors(edit_form.ctlInsumoid) }}
      </div>
        {{ form_widget(edit_form) }}
        <input type="submit" value="Guardar" class="btn btn-primary" />
    {{ form_end(edit_form) }}
   </div>
   <div class="box-footer" style="">
    <a href="{{ path('configuracion_establecimientos_index') }}" class="btn btn-info"><span class="glyphicon glyphicon-list-alt" data-toggle="tooltip" title="" data-original-title="Listar"> Listar </span></a>
   </div>
  </div>
 </div>
</div>
{% endblock %}

{% block head_js %}
  <link rel="stylesheet" href="{{ asset('assets/') }}core/plugins/select2/select2.min.css">
  <link rel="stylesheet" href="{{ asset('assets/') }}core/plugins/lou-multi-select/css/multi-select.css">
{% endblock %}


{% block footer_js %}
  <!-- Bootstrap 3.3.6 -->
  <script src="{{ asset('assets/') }}core/bootstrap/js/bootstrap.min.js"></script>
  <script src="{{ asset('assets/') }}core/bower_components/select2/dist/js/select2.full.min.js"></script>
  <script type="text/javascript">
	$(function () { 
		$("#minsal_corebundle_ctlestablecimiento_idTipoEstablecimiento").select2(); 
		$("#minsal_corebundle_ctlestablecimiento_idTipoEstablecimiento").select2(); 
	}); 
  </script>
{% endblock %}
