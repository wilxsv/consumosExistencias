{% extends 'base.html.twig' %}
{% block title %}Listado de Establecimientos{% endblock %}
{% block body %}

<div class="col-xs-12">
 <div class="box">
  <div class="box-header"><h3 class="box-title">Listado</h3></div>
   <div class="box-body">
    <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Fax</th>
                <th>Apertura</th>
       <th>Operaciones</th>
      </tr>
     </thead>
     <tbody>
        {% for ctlEstablecimiento in ctlEstablecimientos %}
            <tr>
                <td><a href="{{ path('configuracion_establecimientos_show', { 'id': ctlEstablecimiento.id }) }}">{{ ctlEstablecimiento.nombre }}</a></td>
                <td>{{ ctlEstablecimiento.direccion }}</td>
                <td>{{ ctlEstablecimiento.telefono }}</td>
                <td>{{ ctlEstablecimiento.fax }}</td>
                <td>{{ ctlEstablecimiento.anioApertura }}</td>
                <td>
        <a href="{{ path('configuracion_establecimientos_edit', { 'id': ctlEstablecimiento.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Editar </a>
        <a href="{{ path('configuracion_establecimientos_show', { 'id': ctlEstablecimiento.id }) }}"><span class="glyphicon glyphicon-search"></span> Ver </a>
                </td>
            </tr>
        {% endfor %}
     </tbody>
     <tfoot>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Fax</th>
                <th>Apertura</th>
       <th>Operaciones</th>
     </tfoot>
    </table>
   </div>
  </div>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
{% endblock %}
