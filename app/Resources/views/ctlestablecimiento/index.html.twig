{% extends 'base.html.twig' %}
{% block title %}Listado de Establecimientos{% endblock %}
{% block subtitle %}<a href="" data-toggle="modal" data-target=".bs-example-modal-lg"> Definir cuadro basico <span class="glyphicon glyphicon-plus-sign"></span></a>{% endblock %}
{% block body %}
<div class="row">
 <div class="box">
  <div class="box-header"><h3 class="box-title">Dar clic en el establecimiento para ver el detalle del cuadro basico</h3></div>
   <div class="box-body">
    <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
       <th>Tipo establecimiento</th>
       <th>Región</th>
       <th>SIBASI</th>
       <th>Establecimiento</th>
      </tr>
     </thead>
     <tbody>
        {% for ctlEstablecimiento in ctlEstablecimientos %}
            <tr>
                <td>{{ ctlEstablecimiento.nombre }}</td>
                <td>{{ ctlEstablecimiento.direccion }}</td>
                <td>{{ ctlEstablecimiento.telefono }}</td>
                <td><a href="{{ path('configuracion_establecimientos_show', { 'id': ctlEstablecimiento.id }) }}">{{ ctlEstablecimiento.nombre }} <span class="glyphicon glyphicon-search"></span></a></td>
            </tr>
        {% endfor %}
     </tbody>
       <th>Tipo establecimiento</th>
       <th>Región</th>
       <th>SIBASI</th>
       <th>Establecimiento</th>
     <tfoot>
     </tfoot>
    </table>
  </div>
 </div>
</div>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Configuracion de cuadro basico</h4>
      </div>
      {{ form_start(form) }}
      <div class="modal-body">
 <p>Seleccione el tipo de establecimiento:<br />
 {{ form_widget(form.tipo) }}</p>
 Productos:<br />
 {{ form_widget(form.productos) }}
 </p>
	  </div>
      <div class="modal-footer">
        <input type="submit" value="Guardar" class="btn btn-primary">
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>


{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : true,
      'ordering'    : true,
      'info'        : false,
      'autoWidth'   : false
    })
  })
</script>
	<script src="{{ asset('assets/') }}core/plugins/select2/select2.full.min.js"></script>
  <script src="{{ asset('assets/') }}core/plugins/select2/select2.full.min.js"></script>
  <script>
  $(function () {
    $("#minsal_cuadro_basico_productos").select2();
  });
  </script>

{% endblock %}
{% block head_js %}
  <link rel="stylesheet" href="{{ asset('assets/') }}core/plugins/select2/select2.min.css">
{% endblock %}
