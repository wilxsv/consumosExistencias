{% extends 'base.html.twig' %}
{% block title %}Catalogo de Establecimientos oficiales{% endblock %}
{% block subtitle %}Al editar establecimiento podra asociar productos al catalogo y gestional cuadros básicos{% endblock %}
{% block body %}
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          

          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <table id="tabla" class="table table-bordered table-striped">
                <thead>
                <tr>
                <th>Nombre de establecimiento</th>
                <th>Dirección</th>
                <th>Telefono</th>
                <th>Fax</th>
                <th>Operaciones</th>
                </tr>
                </thead>
                <tbody>
                
        {% for ctlEstablecimiento in ctlEstablecimientos %}
            <tr>
                <td>{{ ctlEstablecimiento.nombre }}</td>
                <td>{{ ctlEstablecimiento.direccion }}</td>
                <td>{{ ctlEstablecimiento.telefono }}</td>
                <td>{{ ctlEstablecimiento.fax }}</td>
                <td><a href="{{ path('establecimiento_show', { 'id': ctlEstablecimiento.id }) }}">Ver</a> - <a href="{{ path('establecimiento_edit', { 'id': ctlEstablecimiento.id }) }}">Editar</a></td>
            </tr>
        {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                <th>Nombre de establecimiento</th>
                <th>Dirección</th>
                <th>Telefono</th>
                <th>Fax</th>
                <th>Operaciones</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>    
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
  $(function () {
    $("#tabla").DataTable();
    $('#e').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
{% endblock %}
