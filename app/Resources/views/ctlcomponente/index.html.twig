{% extends 'base.html.twig' %}
{% block title %}Catalogo de componentes / programas especiales{% endblock %}
{% block subtitle %}Representa los diferentes que llevan seguimiento especial en los consumos{% endblock %}
{% block body %}
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          

          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <table id="tabla" class="table table-bordered table-striped">
                <thead>
                <tr>
                <th>Componente</th>
                <th>Productos</th>
                <th>Operaciones</th>
                </tr>
                </thead>
                <tbody>
        {% for ctlComponente in ctlComponentes %}
            <tr>
                <td>{{ ctlComponente.nombreComponente }}</td>
                <td></td>
                <td>
                    <a href="{{ path('componente_show', { 'id': ctlComponente.id }) }}">Ver</a>
                     - 
                            <a href="{{ path('componente_edit', { 'id': ctlComponente.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                <th>Componente</th>
                <th>Productos</th>
                <th>Operaciones</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
                  <a href="{{ path('componente_new') }}" class="btn  btn-primary">Agregar componente</a>
    </section>    
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
  $(function () {
    $("#tabla").DataTable();
    $('#e').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
{% endblock %}
