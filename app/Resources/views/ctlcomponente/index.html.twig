{% extends 'base.html.twig' %}
{% block title %}Listado de Programas{% endblock %}
{% block subtitle %}<a href="{{ path('configuracion_programas_new') }}"> Agregar <span class="glyphicon glyphicon-plus-sign"></span></a>{% endblock %}
{% block body %}
<div class="col-xs-12">
 <div class="box">
  <div class="box-header"><h3 class="box-title">Listado</h3></div>
   <div class="box-body">
    <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
       <th>Nombre de componente</th>
       <th>Acciones</th>
      </tr>
     </thead>
     <tbody>
        {% for ctlComponente in ctlComponentes %}
            <tr>
                <td><a href="{{ path('configuracion_programas_show', { 'id': ctlComponente.id }) }}">{{ ctlComponente.nombreComponente }}</a></td>
                <td>
        <a href="{{ path('configuracion_programas_edit', { 'id': ctlComponente.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
        <a href="{{ path('configuracion_programas_show', { 'id': ctlComponente.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
                </td>
            </tr>
        {% endfor %}
     </tbody>
     <tfoot>
       <th>Nombre de componente</th>
       <th>Acciones</th>
     </tfoot>
    </table>
   </div>
  </div>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
{% endblock %}
