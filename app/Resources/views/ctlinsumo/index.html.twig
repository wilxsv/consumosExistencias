{% extends 'base.html.twig' %}
{% block title %}Listado oficial de suministros{% endblock %}
{% block subtitle %}{% endblock %}
{% block body %}
<div class="col-xs-12">
 <div class="box">
  <div class="box-header"><h3 class="box-title">Catalogo</h3></div>
   <div class="box-body">
    <table id="tabla" class="table table-bordered table-striped">
     <thead>
       <th>Suministro</th>
       <th>Grupo</th>
       <th>Codigo</th>
       <th>Nombre</th>
       <th>Listado oficial</th>
       <th>Registro</th>
       <th>Activo</th>
     </thead>
     <tbody>
        {% for ctlInsumo in ctlInsumos %}
            <tr>
                <td>{{ ctlInsumo.codigoNu }}</td>
                <td>{{ ctlInsumo.grupoid }}</td>
                <td>{{ ctlInsumo.codigoSinab }}</td>
                <td>{{ ctlInsumo.nombreLargoInsumo }}</td>
                <td>{% if ctlInsumo.listadoOficial %}Si{% else %}No{% endif %}</td>
                <td>{% if ctlInsumo.registroSchema %}{{ ctlInsumo.registroSchema|date('Y-m-d') }}{% endif %}</td>
                <td>{% if ctlInsumo.enableSchema %}Si{% else %}No{% endif %}</td>
            </tr>
        {% endfor %}
     </tbody>
     <tfoot>
       <th>Suministro</th>
       <th>Grupo</th>
       <th>Codigo</th>
       <th>Nombre</th>
       <th>Listado oficial</th>
       <th>Registro</th>
       <th>Activo</th>
     </tfoot>
    </table>
  </div>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
{% endblock %}



