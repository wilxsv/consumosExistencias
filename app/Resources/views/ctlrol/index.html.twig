{% extends 'base.html.twig' %}
{% block title %}Listado de Roles y accesos{% endblock %}
{% block subtitle %}<a href="{{ path('admin_rol_new') }}"> <button class="btn btn-info btn-flat" type="button">Agregar <span class="glyphicon glyphicon-plus-sign"></span></button></a>{% endblock %}
{% block body %}

<div class="col-xs-12">
 <div class="box">
  <div class="box-header"><h3 class="box-title">Listado</h3></div>
   <div class="box-body">
    <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
       <th>Nombre de rol</th>
       <th>Operaciones</th>
      </tr>
     </thead>
     <tbody>
        {% for ctlRol in ctlRols %}
            <tr>
                <td>{{ ctlRol.nombreRol }}</td>
                <td>
        <a href="{{ path('admin_rol_edit', { 'id': ctlRol.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
        <a href="{{ path('admin_rol_show', { 'id': ctlRol.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
                </td>
            </tr>
        {% endfor %}
     </tbody>
     <tfoot>
       <th>Nombre de rol</th>
       <th>Operaciones</th>
     </tfoot>
    </table>
   </div>
  </div>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
{% endblock %}



