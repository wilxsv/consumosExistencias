{% extends 'base.html.twig' %}
{% block title %}Mostrando: {{ ctlRol.nombreRol }}{% endblock %}
{% block body %}
<div class="row">
 <div class="col-xs-12">
  <div class="box">
   <div class="box-header with-border">
    <h4>Datos</h4>
    <div class="box-tools pull-right">
     <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Ocultar">
     <i class="fa fa-minus"></i></button>
     <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Salir">
     <i class="fa fa-times"></i></button>
    </div>
   </div>
   <div class="box-body" style
    <table>
        <tbody>
            <tr>
                <th>Nombre Rol</th>
                <td>{{ ctlRol.nombreRol }}</td>
            </tr>
        </tbody>
    </table>
   </div>
   <div class="box-footer" style="">
    <a href="{{ path('admin_rol_index') }}" class="btn btn-info"><span class="glyphicon glyphicon-list-alt" data-toggle="tooltip" title="" data-original-title="Listar"></span> Listar </a> <a href="{{ path('admin_rol_edit', { 'id': ctlRol.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" data-toggle="tooltip" title="" data-original-title="Editar"></span> Editar </a>
{{ form_start(delete_form) }}
 <input type="submit" value="Eliminar" class="btn btn-danger"/>
{{ form_end(delete_form) }}
   </div>
  </div>
 </div>
</div>
{% endblock %}
