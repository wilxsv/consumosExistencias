{% extends 'base.html.twig' %}
{% block title %}Mecanismos de transferencia de datos{% endblock %}
{% block subtitle %}{% endblock %}
{% block body %}
<div class="col-xs-12">
 <div class="box">
  <div class="box-header"><h3 class="box-title">Listado</h3></div>
   <div class="box-body">
    <table id="tabla" class="table table-bordered table-striped">
     <thead>
      <tr>
       <th>Nombre del mecanismo</th>
       <th>Tipo</th>
      </tr>
     </thead>
     <tbody>
        {% for ctlMecanismo in ctlMecanismos %}
            <tr>
                <td>{{ ctlMecanismo.nombreMecanismo }}</td>
                <td>{{ ctlMecanismo.manualMecanismo }}</td>
            </tr>
        {% endfor %}
     </tbody>
     <tfoot>
       <th>Nombre del mecanismo</th>
       <th>Tipo</th>
     </tfoot>
    </table>
   </div>
  </div>
 </div>
</div>
{% endblock %}

{% block footer_js %}
<!-- DataTables -->
<script src="{{ asset('assets/') }}core/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="{{ asset('assets/') }}core/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#tabla').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
{% endblock %}


