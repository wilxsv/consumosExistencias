{% extends 'base.html.twig' %}
{% block body %}
{%  if is_granted('IS_AUTHENTICATED_FULLY') %}
  {% if is_granted('ROLE_ADMIN_REGION') %}
	{% include 'MinsalRutinaBundle::Default/region.html.twig' %}
  {%  endif %}
  {% if is_granted('ROLE_REGISTRO_LOCAL') %}
	{% include 'MinsalRutinaBundle::Default/local.html.twig' %}
  {%  endif %}
  {% if is_granted('ROLE_REGISTRO_REGIONAL') %}
	{% include 'MinsalRutinaBundle::Default/registro.html.twig' %}
  {%  endif %}
