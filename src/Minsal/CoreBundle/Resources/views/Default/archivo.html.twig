{% extends 'base.html.twig' %}
{% block title %}Manejador de archivos de consumo{% endblock %}
{% block subtitle %}seleccione la operaciona realizar{% endblock %}
{% block body %}
{% if suministro %}

<section id="download">
        <div class="row">
          <div class="col-sm-6">
            <div class="box box-primary">
              <div class="box-header with-border">
                <h3 class="box-title">Bajar archivo de registro</h3>
              </div><!-- /.box-header -->
              <div class="box-body">
                <br/>
				<br/>
                <a href="{{ path('minsal_core_registro_archivo_xls') }}" class="btn btn-info">
					<i class="fa fa-cloud-download"></i> Registro de consumo [Colector de {{suministro}}]
				</a>
				<br/>
              </div><!-- /.box-body -->
            </div><!-- /.box -->
          </div><!-- /.col -->
          <div class="col-sm-6">
            <div class="box box-primary">
              <div class="box-header with-border">
                <h3 class="box-title">Subir archivo de consumos mensuales</h3>
              </div><!-- /.box-header -->
              <div class="box-body">
				
				<form enctype="multipart/form-data" method="post" name="fileinfo" action="{{ url('minsal_core_registro_archivo') }}">
                  <div class="form-group">
                    <label for="exampleInputFile">Seleccionar archivo</label>
                     <input id="file" type="file" name="file" accept=".xlsx, .xls, .XLSX, .XLS, .ods, .ODS |application/vnd.openxmlformats-officedocument.spreadsheetml.sheet/*">
                     
                   <p class="help-block">Solo se admiten hojas de calculo generadas por el sistema.</p>
                  </div>
                          <button class="btn btn-info" type="submit">
          					<i class="fa fa-cloud-upload" ></i> Registro de consumo por colector diario
          				      </button>
          		</form>
              </div><!-- /.box-body -->
            </div><!-- /.box -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </section>
{% endif %}
{% endblock %}
